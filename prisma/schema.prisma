// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DB_URL")
  extensions = [postgis]
}

model User {
  id        String      @id @default(uuid())
  email     String      @unique
  name      String
  password  String
  birthDate DateTime?
  country   String?
  city      String?
  address   String?
  phone     String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Ocurrency Ocurrency[]
}

model Ocurrency {
  id       String                               @id @default(uuid())
  idUser   String
  user     User                                 @relation(fields: [idUser], references: [id])
  title    String
  type     OcurrencyType
  date     DateTime
  location Unsupported("geometry(Point, 4326)")
}

enum OcurrencyType {
  theft
  robbery
  sexualHarassment
  kidnapping
  vandalism
  other
}
